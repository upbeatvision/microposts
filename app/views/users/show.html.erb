<h1>プロフィール</h1>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
      </h1>
       <ul>
         <li>ユーザー名：<%= @user.name %></li>
         <li>地域：<%= @user.location %></li>
         <li><%= link_to "Followings", user_followers_path(@user) %></li>
         <li><%= link_to "Followers", user_followings_path(@user) %></li>    
       </ul>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>

