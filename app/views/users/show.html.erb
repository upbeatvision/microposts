<h1>プロフィール</h1>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
         <span>地域：<%= @user.location %></span>
         <span><%= link_to "Followers", user_followers_path(@user) %></span>
         <span><%= link_to "Followings", user_followings_path(@user) %></span>    
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>

