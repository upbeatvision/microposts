<%= form_for(@user, html: { class: "form-horizontal" }) do |f| %>
  <% if @user.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @user.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">Email:</label>
    <div class="col-sm-10"><%= f.text_area :email, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <label for="location" class="col-sm-2 control-label">地域:</label>
    <div class="col-sm-10"><%= f.text_field :location, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10"><%= f.submit class: "btn btn-sm btn-primary" %></div>
  </div>
<% end %>
